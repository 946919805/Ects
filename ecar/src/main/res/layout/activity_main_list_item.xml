<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_shopcar_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="1dp">

    <LinearLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_round_bg"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/textView"
            style="@style/text_tittle_sty"

            android:text="单号：" />

        <TextView
            android:id="@+id/no"
            style="@style/text_sty"
            android:text="TextView" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/two"
        android:layout_below="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E5E5E5"
        android:orientation="horizontal">

        <TextView

            style="@style/text_tittle_sty"
            android:text="网点：" />

        <TextView
            android:id="@+id/status"
            style="@style/text_sty"
            android:text="TextView" />

        <TextView

            style="@style/text_tittle_sty"
            android:text="发运日期："
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/typename"
            style="@style/text_sty"
            android:layout_marginBottom="6dp"
            android:text="TextView" />

    </LinearLayout>

    <com.gzdc.ecar.View.ChildListView
        android:layout_below="@+id/two"
        android:id="@+id/listView_child"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

    </com.gzdc.ecar.View.ChildListView>

    <ImageView
       android:id="@+id/image_ico"
        android:layout_alignParentRight="true"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/make_cargo"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
       android:layout_below="@+id/listView_child"
       >

        <Button
            android:id="@+id/cancle_bill"
            style="@style/button_sty"
            android:text="拒绝" />

        <Button
            android:id="@+id/in_bill"
            style="@style/button_sty"

            android:text="接单" />

        <Button
            android:id="@+id/care_bill"
            style="@style/button_sty"
            android:text="发车" />

        <Button
            android:id="@+id/daohan"
            style="@style/button_sty"
            android:text="导航"

            />

        <Button
            android:id="@+id/sure_bill"
            style="@style/button_sty"
            android:text="交单" />
        >
    </LinearLayout>
</RelativeLayout>

