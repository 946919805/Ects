<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gzdc.ecar.Activity.RegisterActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        style="@style/Head_style"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            style="@style/Head_text_style"
            android:text="@string/my_text_register" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="0dp"
            style="@style/text_tittle_sty"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="注册单位："
            android:textColor="@color/text_black" />
        <EditText
            android:id="@+id/custname"
            style="@style/text_sty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_tittle_sty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="车牌号："
            android:textColor="@color/text_black" />

        <EditText
            android:id="@+id/vehicle"
            style="@style/text_sty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_tittle_sty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="车长："
            android:textColor="@color/text_black" />

        <EditText
            android:id="@+id/vehilen"
            style="@style/text_sty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_tittle_sty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="载重："
            android:textColor="@color/text_black" />

        <EditText
            android:id="@+id/vehiwht"
            style="@style/text_sty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_tittle_sty"
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="司机："
            android:textColor="@color/text_black" />

        <EditText
            android:id="@+id/driver"
            style="@style/text_sty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_tittle_sty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="联系电话："
            android:textColor="@color/text_black" />

        <EditText
            android:id="@+id/drivertel"
            style="@style/text_sty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:inputType="phone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_tittle_sty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="登录密码："
            android:textColor="@color/text_black" />

        <EditText
            android:id="@+id/password"
            style="@style/text_sty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_weight="0.7" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/text_tittle_sty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="确认密码："
            android:textColor="@color/text_black" />

        <EditText
            android:id="@+id/sure_password"
            style="@style/text_sty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"

            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:id="@+id/savebtn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round_corner_bg"
        android:text="@string/next"
        android:textColor="#717172"
        android:textSize="15sp" />
</LinearLayout>
